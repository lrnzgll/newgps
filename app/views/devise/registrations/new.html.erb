<div class= 'full-height'>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="devise-title">Registrazione</div>
    <div class="form-inputs">
      <%= f.input :username,
              label: 'Nome utente', 
              required: true,
              autofocus: true,
              input_html: { autocomplete: "username" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "password" } %>
      <%= f.input :password_confirmation,
                  label: 'Conferma password', 
                  required: true,
                  input_html: { autocomplete: "conferma password" } %>
    </div>

    <div class="actions">
      <%= f.button :submit, "Invia" %>
    </div>
  <% end %>
</div>
